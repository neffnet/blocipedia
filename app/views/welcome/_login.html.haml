= simple_form_for(:user, :url => session_path(:user)) do |f|
  .small-8.large-6.columns
    = f.input :name, autofocus: true, placeholder: 'username', label: false
    = f.input :password, placeholder: 'password', label: false
  .small-4.large-6.columns
    = f.button :submit, 'Log In', class: 'tiny button'
    %br
    = f.input :remember_me, label: false, inline_label: 'Remember me', as: :boolean
