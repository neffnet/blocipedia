= simple_form_for(:user, :url => session_path(:user)) do |f|
  .small-7.large-5.columns
    = f.text_field :name, autofocus: true, placeholder: 'username'
    = f.password_field :password, placeholder: 'password'
  .small-5.large-7.columns
    = f.submit 'Sign In', class: 'button tiny'
    %br
    = f.check_box :remember_me
    = f.label :stay_signed_in?
